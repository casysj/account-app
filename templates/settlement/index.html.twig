{% extends 'base.html.twig' %}

{% block title %}Settlement index{% endblock %}

{% block body %}
    <h1>Settlement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Month</th>
                <th>TotalExpenses</th>
                <th>Balance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for settlement in settlements %}
            <tr>
                <td>{{ settlement.id }}</td>
                <td>{{ settlement.month ? settlement.month|date('Y-m-d') : '' }}</td>
                <td>{{ settlement.totalExpenses }}</td>
                <td>{{ settlement.balance }}</td>
                <td>
                    <a href="{{ path('app_settlement_show', {'id': settlement.id}) }}">show</a>
                    <a href="{{ path('app_settlement_edit', {'id': settlement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_settlement_new') }}">Create new</a>
{% endblock %}
